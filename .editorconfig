# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Shell scripts
[*.sh]
indent_size = 2

# TOML files
[*.toml]
indent_size = 4

# CSS, SCSS, Less
[*.{css,scss,less}]
indent_size = 2

# HTML, XML
[*.{html,xml}]
indent_size = 2

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Java
[*.java]
indent_size = 4

# C, C++, C#, Objective-C
[*.{c,cpp,h,hpp,cs,csx,m,mm}]
indent_size = 4

# Ruby
[*.rb]
indent_size = 2

# PHP
[*.php]
indent_size = 4

# Go
[*.go]
indent_style = tab

# Rust
[*.rs]
indent_size = 4

# Dockerfile
[Dockerfile*]
indent_size = 4

# Makefiles use real tabs
[Makefile]
indent_style = tab

# Git commit messages
[COMMIT_EDITMSG]
max_line_length = 72

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# SQL files
[*.sql]
indent_size = 2

# Documentation files
[*.{rst,txt}]
trim_trailing_whitespace = false

# Log files
[*.log]
indent_style = none
indent_size = none
insert_final_newline = false
trim_trailing_whitespace = false

# Binary files
[*.{png,jpg,jpeg,gif,ico,svg,woff,woff2,ttf,eot,otf}]
indent_style = none
indent_size = none
insert_final_newline = false
trim_trailing_whitespace = false

# Archive files
[*.{zip,rar,7z,tar,gz,bz2,xz}]
indent_style = none
indent_size = none
insert_final_newline = false
trim_trailing_whitespace = false

# Executable files
[*.{exe,dll,so,dylib}]
indent_style = none
indent_size = none
insert_final_newline = false
trim_trailing_whitespace = false

# Python compiled files
[__pycache__]
indent_style = none
indent_size = none
insert_final_newline = false
trim_trailing_whitespace = false

# Virtual environment
[venv]
indent_style = none
indent_size = none
insert_final_newline = false
trim_trailing_whitespace = false

# Build directories
[build]
indent_style = none
indent_size = none
insert_final_newline = false
trim_trailing_whitespace = false

# Distribution directories
[dist]
indent_style = none
indent_size = none
insert_final_newline = false
trim_trailing_whitespace = false
