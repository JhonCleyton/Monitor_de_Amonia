# Configurações de Ambiente - Monitor de Amônia

# Configurações do Aplicativo
APP_NAME=Monitor de Amônia
APP_VERSION=1.0.0
APP_DEBUG=True

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=logs/amonia_monitor.log
LOG_MAX_SIZE=10  # MB
LOG_BACKUP_COUNT=5

# Configurações do Banco de Dados
DB_TYPE=sqlite
DB_NAME=monitor_amonia.db
DB_HOST=localhost
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_RETENTION_DAYS=30

# Configurações Modbus
MODBUS_PORT=COM3
MODBUS_BAUDRATE=9600
MODBUS_TIMEOUT=1.0
MODBUS_RETRIES=3
MODBUS_DEBUG=False

# Configurações de E-mail (SMTP)
SMTP_ENABLED=False
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=seu_email@example.com
SMTP_PASSWORD=sua_senha
SMTP_FROM=monitor_amonia@example.com
SMTP_TO=alerta@example.com

# Configurações do WhatsApp (Twilio)
WHATSAPP_ENABLED=False
TWILIO_ACCOUNT_SID=sua_account_sid
TWILIO_AUTH_TOKEN=seu_auth_token
TWILIO_FROM_NUMBER=whatsapp:+14155238886
WHATSAPP_TO_NUMBERS=whatsapp:+5511999999999

# Configurações de Segurança
SECRET_KEY=sua_chave_secreta_muito_segura
ENCRYPTION_KEY=sua_chave_criptografia_32_bytes

# Configurações da Interface
UI_REFRESH_INTERVAL_MS=1000
UI_THEME=dark
UI_LANGUAGE=pt_BR

# Configurações de Notificação
NOTIFICATION_WARNING_THRESHOLD=25
NOTIFICATION_ALARM_THRESHOLD=50
NOTIFICATION_COOLDOWN_MINUTES=15
